<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.book_trading">

    <uses-permission android:name="android.permission.INTERNET" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:background="#FFFFFF"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfilActivity"
            android:label="Profil"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ProfilFremdActivity"
            android:label="Profil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForumActivity"
            android:label="Forum"
            android:screenOrientation="portrait" />
        <activity
            android:name=".my_forum"
            android:label="Mein Forum"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ForumCommentActivity"
            android:label="Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForumEintragActivity"
            android:label="Forum Eintrag"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NachrichtenActivity"
            android:label="Nachrichten"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChatActivity"
            android:label="Chat"
            android:screenOrientation="portrait" />
    </application>

</manifest>